<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none"
    android:fadingEdge="vertical"
    android:fadingEdgeLength="20dp"
    android:cacheColorHint="@android:color/transparent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".ReferralDetailActivity"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingRight="@dimen/inner_right_margin"
        android:paddingTop="@dimen/inner_top_margin"
        android:paddingBottom="@dimen/inner_bottom_margin"
        android:paddingLeft="@dimen/inner_left_margin">

        <LinearLayout
            android:id="@+id/physicianContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:orientation="horizontal">

            <ImageView android:id="@+id/detail_phy_image"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="10dp"
                android:contentDescription="@string/doc_images"
                android:layout_gravity="center"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center">

                <TextView android:textAppearance="?android:attr/textAppearanceMedium"
                    android:id="@+id/detail_physicianName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="3"
                    android:ellipsize="end"
                    android:paddingLeft="5dp"
                    android:text="@string/detail_blank" />
                <TextView android:textAppearance="?android:attr/textAppearanceSmall"
                    android:id="@+id/detail_degree"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:paddingLeft="5dp"
                    android:visibility="gone"
                    android:text="@string/detail_blank" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingTop="5dp">
            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="#909090"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView android:textAppearance="?android:attr/textAppearanceSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:ellipsize="end"
                android:paddingTop="10dp"
                android:layout_weight="1"
                android:textColor="#909090"
                android:text="@string/detail_status_message" />
            <TextView android:textAppearance="?android:attr/textAppearanceMedium"
                android:id="@+id/detail_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="5"
                android:ellipsize="end"
                android:visibility="gone"
                android:layout_weight="1" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView android:textAppearance="?android:attr/textAppearanceSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:ellipsize="end"
                android:paddingTop="10dp"
                android:layout_weight="1"
                android:textColor="#909090"
                android:text="@string/detail_about_me" />
            <TextView android:textAppearance="?android:attr/textAppearanceMedium"
                android:id="@+id/detail_about_me"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="5"
                android:ellipsize="end"
                android:visibility="gone"
                android:layout_weight="1" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingTop="5dp">
            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="#909090"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView android:textAppearance="?android:attr/textAppearanceSmall"
                android:id="@+id/detail_label_hospital_affiliation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:ellipsize="end"
                android:paddingTop="10dp"
                android:layout_weight="1"
                android:textColor="#909090"
                android:text="@string/detail_hospital_affiliation" />
            <TextView android:textAppearance="?android:attr/textAppearanceMedium"
                android:id="@+id/detail_hostpital_affiliation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="5"
                android:ellipsize="end"
                android:visibility="gone"
                android:layout_weight="1"
                android:text="@string/detail_hospital_affiliation" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView android:textAppearance="?android:attr/textAppearanceSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:ellipsize="end"
                android:paddingTop="10dp"
                android:layout_weight="1"
                android:textColor="#909090"
                android:text="@string/detail_department" />
            <TextView android:textAppearance="?android:attr/textAppearanceMedium"
                android:id="@+id/detail_department"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="5"
                android:ellipsize="end"
                android:visibility="gone"
                android:layout_weight="1" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView android:textAppearance="?android:attr/textAppearanceSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:ellipsize="end"
                android:paddingTop="10dp"
                android:layout_weight="1"
                android:textColor="#909090"
                android:text="@string/detail_title" />
            <TextView android:textAppearance="?android:attr/textAppearanceMedium"
                android:id="@+id/detail_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="5"
                android:ellipsize="end"
                android:visibility="gone"
                android:layout_weight="1" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView android:textAppearance="?android:attr/textAppearanceSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:ellipsize="end"
                android:paddingTop="10dp"
                android:layout_weight="1"
                android:textColor="#909090"
                android:text="@string/insurance_accepted" />
            <TextView android:textAppearance="?android:attr/textAppearanceMedium"
                android:id="@+id/detail_insurance_accepted"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="5"
                android:ellipsize="end"
                android:visibility="gone"
                android:layout_weight="1" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView android:textAppearance="?android:attr/textAppearanceSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:ellipsize="end"
                android:paddingTop="10dp"
                android:layout_weight="1"
                android:textColor="#909090"
                android:text="@string/appt_hotline" />
            <TextView android:textAppearance="?android:attr/textAppearanceMedium"
                android:id="@+id/detail_appt_hotline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="5"
                android:ellipsize="end"
                android:visibility="gone"
                android:layout_weight="1" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingTop="5dp">
            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="#909090"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView android:textAppearance="?android:attr/textAppearanceSmall"
                android:id="@+id/detail_label_speciality"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:ellipsize="end"
                android:paddingTop="10dp"
                android:layout_weight="1"
                android:textColor="#909090"
                android:text="@string/detail_speciality"/>
            <TextView android:textAppearance="?android:attr/textAppearanceMedium"
                android:id="@+id/detail_speciality"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="5"
                android:ellipsize="end"
                android:visibility="gone"
                android:layout_weight="1"
                android:text="@string/detail_speciality"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView android:textAppearance="?android:attr/textAppearanceSmall"
                android:id="@+id/detail_label_super_speciality"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="5"
                android:ellipsize="end"
                android:paddingTop="10dp"
                android:layout_weight="1"
                android:textColor="#909090"
                android:text="@string/detail_super_speciality"/>
            <TextView android:textAppearance="?android:attr/textAppearanceMedium"
                android:id="@+id/detail_super_speciality"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="5"
                android:ellipsize="end"
                android:visibility="gone"
                android:layout_weight="1"
                android:text="@string/detail_super_speciality"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingTop="5dp">
            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="#909090"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView android:textAppearance="?android:attr/textAppearanceSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:ellipsize="end"
                android:paddingTop="10dp"
                android:layout_weight="1"
                android:textColor="#909090"
                android:text="@string/detail_medical_school_attended" />
            <TextView android:textAppearance="?android:attr/textAppearanceMedium"
                android:id="@+id/detail_medical_school_attended"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="5"
                android:ellipsize="end"
                android:visibility="gone"
                android:layout_weight="1" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView android:textAppearance="?android:attr/textAppearanceSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:ellipsize="end"
                android:paddingTop="10dp"
                android:layout_weight="1"
                android:textColor="#909090"
                android:text="@string/detail_graduation_year" />
            <TextView android:textAppearance="?android:attr/textAppearanceMedium"
                android:id="@+id/detail_graduation_year"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="5"
                android:ellipsize="end"
                android:visibility="gone"
                android:layout_weight="1" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingTop="5dp">
            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="#909090"/>
        </LinearLayout>

        <!-- Contact Info -->
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <!-- Contact Info Text -->
            <TextView android:textAppearance="?android:attr/textAppearanceSmall"
                android:id="@+id/detail_label_contact_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAllCaps="true"
                android:maxLines="1"
                android:paddingTop="10dp"
                android:textColor="#909090"
                android:text="@string/detail_location"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="10dp">

                <!-- City -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView android:textAppearance="?android:attr/textAppearanceSmall"
                        android:id="@+id/detail_label_city"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:paddingTop="10dp"
                        android:textColor="#909090"
                        android:text="@string/detail_city"/>
                    <TextView android:textAppearance="?android:attr/textAppearanceMedium"
                        android:id="@+id/detail_city"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:maxLines="4"
                        android:autoLink="email"
                        android:ellipsize="end"
                        android:visibility="gone"
                        android:text="@string/detail_city"/>
                </LinearLayout>
                <!-- State -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView android:textAppearance="?android:attr/textAppearanceSmall"
                        android:id="@+id/detail_label_state"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:paddingTop="10dp"
                        android:textColor="#909090"
                        android:text="@string/detail_state"/>
                    <TextView android:textAppearance="?android:attr/textAppearanceMedium"
                        android:id="@+id/detail_state"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:maxLines="8"
                        android:ellipsize="end"
                        android:visibility="gone"
                        android:text="@string/detail_state"/>
                </LinearLayout>
                <!-- Country -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView android:textAppearance="?android:attr/textAppearanceSmall"
                        android:id="@+id/detail_label_country"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:paddingTop="10dp"
                        android:textColor="#909090"
                        android:text="@string/detail_country"/>
                    <TextView android:textAppearance="?android:attr/textAppearanceMedium"
                        android:id="@+id/detail_country"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:maxLines="8"
                        android:ellipsize="end"
                        android:visibility="gone"
                        android:text="@string/detail_country"/>
                </LinearLayout>
                <!-- Postal Code -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView android:textAppearance="?android:attr/textAppearanceSmall"
                        android:id="@+id/detail_label_postal_code"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:paddingTop="10dp"
                        android:textColor="#909090"
                        android:text="@string/detail_postal_code"/>
                    <TextView android:textAppearance="?android:attr/textAppearanceMedium"
                        android:id="@+id/detail_postal_code"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:maxLines="8"
                        android:ellipsize="end"
                        android:visibility="gone"
                        android:text="@string/detail_postal_code"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>